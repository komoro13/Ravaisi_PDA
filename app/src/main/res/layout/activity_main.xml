<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ραβαΐσι"
        android:layout_margin="70dp"
        android:textSize="35dp"
        android:gravity="center_horizontal"
        android:id="@+id/ravaisi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@id/ravaisi">

       <com.google.android.material.button.MaterialButton
           android:id="@+id/orderBtn"
           android:layout_width="180dp"
           android:layout_height="180dp"
           android:layout_marginStart="10dp"
           android:layout_marginTop="10dp"
           android:layout_marginEnd="10dp"
           android:layout_marginBottom="10dp"
           android:background="@drawable/custom_button"
           android:text="Νέα παραγγελία"
           android:textColor="@color/white" />

       <com.google.android.material.button.MaterialButton
           android:id="@+id/ordersBtn"
           android:layout_width="180dp"
           android:layout_height="180dp"
           android:layout_marginStart="10dp"
           android:layout_marginTop="10dp"
           android:layout_marginEnd="10dp"
           android:layout_marginBottom="10dp"
           android:layout_toRightOf="@id/orderBtn"
           android:background="@drawable/custom_button"
           android:text="Παραγγελίες"
           android:textColor="@color/white" />

       <com.google.android.material.button.MaterialButton
           android:id="@+id/setupBtn"
           android:layout_width="380dp"
           android:layout_height="180dp"
           android:layout_below="@id/ordersBtn"
           android:layout_marginStart="10dp"
           android:layout_marginTop="10dp"
           android:layout_marginEnd="10dp"
           android:layout_marginBottom="10dp"
           android:background="@drawable/custom_button"
           android:text="Ρυθμίσεις"
           android:textColor="@color/white" />
</RelativeLayout>
</RelativeLayout>